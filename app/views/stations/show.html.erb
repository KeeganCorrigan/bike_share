<h2><%= @station.name %></h2>

<% if current_admin? %>
<div class="button-container">
  <div class="edit-container">
    <%= link_to edit_admin_station_path(@station) do %>
        <i class="far fa-edit link-text">
        <p class="hidden">Edit</p></i>
    <% end %>
  </div>
  <div class="delete-container">
    <%= link_to admin_station_path(@station), method: :delete do %>
      <i class="far fa-trash-alt"></i>
      <p class="hidden">Delete</p>
    <% end %>
  </div>
</div>
<% end %>


<p><strong>City:</strong><p>
<p><%= @station.city %></p>
<p><strong>Dock count:</strong><p>
<p><%= @station.dock_count %></p>
<p><strong>Installation date:</strong><p>
<p><%= @station.installation_date.to_s %></p>

<% unless @station.start_trips.empty? %>
  <p>Total rides: <%= @total_ride_starts %> </p>
  <p>Number of rides ended at this station: <%= @total_ride_ends %> </p>
  <p> <%= @most_frequent_destination %> </p>
  <p> <%= @most_frequent_start %> </p>
  <p> <%= @date_with_most_trips %> </p>
  <p> <%= @zip_code_with_most_trips %> </p>
  <p>Bike with most trips: <%= @bike_with_most_trips %> </p>
<% end %>
