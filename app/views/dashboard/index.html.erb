<div class="row">
  <div class="col-sm-6">
    <h2>Profile for <%= current_user.username %>

    <% if current_user %>
      <%= link_to edit_user_path(current_user) do %>
          <i class="far fa-edit link-text admin-edit">
          <p class="hidden">Edit</p></i>
      <% end %>
    <% end %>
  </h2>
</div>
</div>

<div class="row">
  <div class="col-sm-4">
    <p class="important-text"><strong>First name:</strong></p>
    <p><%= current_user.first_name %></p>

    <p class="important-text"><strong>Last name:</strong></p>
    <p><%= current_user.last_name %></p>


  </div>
  <div class="col-sm-4">
    <p class="important-text"><strong>Address:</strong></p>
    <p><%= current_user.address %>, <%= current_user.city %></p>
    <p><%= current_user.state %>, <%= current_user.zip_code %></p>

  </div>
</div>

<h3 class="dashboard-heading">Your orders:</h3>

<div class="row table-heading">
  <div class="col-sm-1">

  </div>
  <div class="col-sm-1">
    <p>ID</p>
  </div>
  <div class="col-sm-3">
    <p>Created at</p>
  </div>
  <div class="col-sm-2">
    <p>Status</p>
  </div>
</div>
<div class="index-container trips-container">
  <% @orders.each do |order| %>
    <section class="section-index-container">
        <div class="row station-row">
          <div class="col-sm-1 icon-column">
            <%= link_to order_path(order) do %>
              <i class="fas fa-info-circle"></i>
              <p class="hidden">Order ID: <%= order.id %></p>
            <% end %>
          </div>
          <div class="col-sm-1">
            <p><%= order.id %></p>
          </div>
          <div class="col-sm-3">
            <p><%= order.created_at %></p>
          </div>
          <div class="col-sm-2">
            <p><%= order.status %></p>
          </div>
        </div>
      <div>
    </section>
  <% end %>
</div>
