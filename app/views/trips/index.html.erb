<h1> Trips</h1>

<div class="row table-heading">
  <div class="col-sm-1">
    <p>Duration (minutes)</p>
  </div>
  <div class="col-sm-2">
    <p>Start station</p>
  </div>
  <div class="col-sm-2">
    <p>Start date</p>
  </div>
  <div class="col-sm-2">
    <p>End station</p>
  </div>
  <div class="col-sm-2">
    <p>End date</p>
  </div>
  <div class="col-sm-2">
    <p>Subscription type</p>
  </div>
  <div class="col-sm-1">
    <p>zip code</p>
  </div>
</div>

<div class="index-container trips-container">
<% @trips.each do |trip| %>
<%= link_to trip_path(trip) do %>
<div class="row station-row">
  <div class="col-sm-1">

    <% if current_admin? %>
      <%= link_to 'Edit Trip', edit_admin_trip_path(trip) %>
      <%= link_to 'Delete Trip', admin_trip_path(trip), method: 'delete' %>
    <% end %>

    <p><%= trip.duration/60 %></p>
  </div>
  <div class="col-sm-2">
    <p><%= trip.start_station.name %></p>
  </div>
  <div class="col-sm-2">
    <p><%= trip.start_date.to_s.chomp(":00 UTC") %></p>
  </div>
  <div class="col-sm-2">
    <p><%= trip.end_station.name %></p>
  </div>
  <div class="col-sm-2">
    <p><%= trip.end_date.to_s.chomp(":00 UTC") %></p>
  </div>
  <div class="col-sm-2">
    <p><%= trip.subscription_type %></p>
  </div>
  <div class="col-sm-1">
    <p><%= trip.zip_code %></p>
  </div>
</div>
<% end %>
<% end %>
</div>

<div class="styled_pagination">
  <div class="page_info">
    <%= page_entries_info @trips %>
  <br/>
    <%= will_paginate @trips, :container => false %>
  </div>
</div>
