<h2>Weather on <%= @condition.date.to_s.chomp("00:00:00 UTC") %></h2>


<p><strong>Max Temperature:</strong></p>
<p><%= @condition.max_temperature_f %></p>

<p><strong>Mean Temperature:</strong></p>
<p><%= @condition.mean_temperature_f %></p>

<p><strong>Min Temperature:</strong></p>
<p><%= @condition.min_temperature_f %></p>

<p><strong>Mean Humididity:</strong></p>
<p><%= @condition.mean_humidity %></p>

<p><strong>Mean Visibility:</strong></p>
<p><%= @condition.mean_visibility_miles %></p>

<p><strong>Mean Wind Speed:</strong></p>
<p><%= @condition.mean_wind_speed_mph %></p>

<p><strong>Precipitation:</strong></p>
<p><%= @condition.precipitation_inches %></p>

<% if current_user&.admin? %>
<div class="button-container">
  <div class="edit-container">
  <section class="main-button create-account">
    <%= link_to edit_condition_path(@condition) do %>
        <p class="link-text">Edit</p>
        <span class="line -right"></span>
        <span class="line -top"></span>
        <span class="line -left"></span>
        <span class="line -bottom"></span>
    <% end %>
  </section>
</div>
<div class="delete-container">
  <section class="main-button create-account">
  <%= link_to condition_path(@condition), method:"delete" do %>
      <p class="link-text">Delete</p>
      <span class="line -right"></span>
      <span class="line -top"></span>
      <span class="line -left"></span>
      <span class="line -bottom"></span>
  <% end %>
  </section>
</div>
</div>
<% end %>
