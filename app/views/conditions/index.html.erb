<h1>Conditions</h1>

<div class="row table-heading">
  <div class="col-sm-2">
    <p>Date<p>
  </div>
  <div class="col-sm-1">
    <p>Max temp<p>
  </div>
  <div class="col-sm-1">
    <p>Min temp<p>
    </div>
  <div class="col-sm-1">
    <p>Mean temp<p>
  </div>
  <div class="col-sm-1">
    <p>Mean humidity<p>
  </div>
  <div class="col-sm-2">
    <p>Mean visibility(mi)<p>
  </div>
  <div class="col-sm-2">
    <p>Mean wind speed(mph)<p>
  </div>
  <div class="col-sm-1">
    <p>precipitation(in)<p>
  </div>
</div>

<div class="index-container">
  <% @conditions.each do |condition| %>
  <div class="row station-row">
    <div class="col-sm-2">
      <p><%= condition.date.to_s.chomp("00:00:00 UTC") %></p>
    </div>
    <div class="col-sm-1">
      <p><%= condition.max_temperature_f %></p>
    </div>
    <div class="col-sm-1">
      <p><%= condition.min_temperature_f %></p>
    </div>
    <div class="col-sm-1">
      <p><%= condition.mean_temperature_f %></p>
    </div>
    <div class="col-sm-1">
      <p><%= condition.mean_humidity %></p>
    </div>
    <div class="col-sm-2">
      <p><%= condition.mean_visibility_miles %></p>
    </div>
    <div class="col-sm-2">
      <p><%= condition.mean_wind_speed_mph %></p>
    </div>
    <div class="col-sm-1">
      <p><%= condition.precipitation_inches %></p>
    </div>
  </div>
  <% end %>
</div>

<div class="styled_pagination">
  <div class="page_info">
    <%= page_entries_info @trips %>
  <br/>
    <%= will_paginate @trips, :container => false %>
  </div>
</div>
