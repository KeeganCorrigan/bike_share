<%= form_for [:admin, @trip] do |f| %>

  <%= f.label :duration %>
  <%= f.number_field :duration %>

  <%= f.label :start_date %>
  <%= f.date_field :start_date %>

  <%= f.label :start_station %>
  <%= f.collection_select :start_station_id, Station.all, :id, :name %>

  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <%= f.label :end_station %>
  <%= f.collection_select :end_station_id, Station.all, :id, :name %>

  <%= f.label :subscription_type %>
  <%= f.select :subscription_type, ['Customer', 'Subscriber'], include_blank: true %>

  <%= f.label :zip_code %>
  <%= f.number_field :zip_code %>

  <%= f.label :bike_id %>
  <%= f.number_field :bike_id %>

  <%= f.submit "Create Trip" %>

<% end %>
