<div class="row">
  <div class="col-sm-6">
    <h2>Profile for <%= current_user.username %>

    <% if current_user&.admin? %>
        <%= link_to edit_user_path(current_user) do %>
            <i class="far fa-edit link-text admin-edit">
            <p class="hidden">Edit</p></i>
        <% end %>
    <% end %>
  </h2>

    <h5><strong>First name:</strong></h5>
    <p><%= current_user.first_name %></p>

    <h5><strong>Last name:</strong></h5>
    <p><%= current_user.last_name %></p>

    <%= link_to "View Accessories", admin_bike_shop_path %>
  </div>
  <div class="col-sm-6">
    <h2>Creation options</h2>
    <%= link_to new_admin_condition_path do %>
      <h4><i class="fas fa-sun dashboard-icon"></i>Condition</h4>
    <% end %>
    <%= link_to new_admin_trip_path do %>
      <h4><i class="fas fa-map-marked-alt dashboard-icon"></i>Trip</h4>
    <% end %>
    <%= link_to new_admin_station_path do %>
      <h4><i class="fas fa-building dashboard-icon"></i>Station</h4>
    <% end %>
  </div>
</div>

<h2>All Orders</h2>

<div class="row">
  <div class="col-sm-1">

  </div>
  <div class="col-sm-1">
    <p>ID</p>
  </div>
  <div class="col-sm-2">
    <p>Name</p>
  </div>
  <div class="col-sm-2">
    <p>Created at</p>
  </div>
  <div class="col-sm-2">
    <p>Status</p>
  </div>
  <div class="col-sm-2">
    <p>Change</p>
  </div>
</div>

<% @orders.each do |order| %>
<section id=<%= "display_#{order.id}" %>>
  <div class="row">
    <div class="col-sm-1">
      <%= link_to order_path(order) do %>
        <i class="fas fa-info-circle"></i>
        <p class="hidden">Info</p>
      <% end %>
    </div>
    <div class="col-sm-1">
      <p><%= order.id %></p>
    </div>
    <div class="col-sm-2">
      <p><%= order.user.full_name %></p>
    </div>
    <div class="col-sm-2">
      <p><%= order.created_at %></p>
    </div>
    <div class="col-sm-2">
      <p><%= order.status %></p>
    </div>
    <div class="col-sm-2">
      

    </div>
  </div>
</section>
<% end %>

<h3>Orders by Status</h3>
<% @order_by_status.each do |status, count| %>
  <p> <%= status %>: <%= count %> </p>
<% end %>
