<h1>Create a New Accessory</h1>

<%= form_for [:admin, @accessory] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.submit "Create Accessory" %>

<% end %>
